<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartrecycling.smartrecycling.Login">

    <ImageView
        android:layout_width="360px"
        android:layout_height="360px"
        app:srcCompat="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="144dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="41dp"
        android:id="@+id/logoView" />

    <EditText
        android:id="@+id/usernameEt"
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:hint="@string/hint_username"
        android:layout_below="@id/logoView"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.EditText"/>

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:hint="@string/hint_password"
        android:layout_below="@id/usernameEt"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.EditText"
        android:inputType="textPassword" />

    <ImageButton
        android:layout_width="520px"
        android:layout_height="47dp"
        app:srcCompat="@drawable/signin_button_changed"
        android:layout_below="@+id/etpassword"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/signinButton"
        android:background="@android:color/background_light"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:layout_width="520px"
        android:layout_height="40dp"
        app:srcCompat="@drawable/fb_button_changed"
        android:layout_below="@+id/signinButton"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/fbButton"
        android:scaleType="fitCenter"
        android:background="@android:color/background_light" />

    <ImageButton
        android:layout_width="520px"
        android:layout_height="40dp"
        app:srcCompat="@drawable/gmail_button_changed"
        android:layout_below="@+id/fbButton"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/googleButton"
        android:scaleType="fitCenter"
        android:background="@android:color/background_light" />

    <TextView
        android:text="Forgot password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/googleButton"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/forgotPassTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:layout_below="@id/googleButton"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Create an account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/googleButton"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:id="@+id/createAccountTextView" />


</RelativeLayout>
